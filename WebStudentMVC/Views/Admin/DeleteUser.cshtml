@model WebStudentMVC.ViewModels.UserViewModel

@{
    ViewData["Title"] = "Confirm Delete";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid pt-4 px-4">
    <div class="bg-light rounded h-100 p-4 shadow-sm">
        <h4 class="mb-4 text-danger">@ViewData["Title"]</h4>
        
        <div class="alert alert-danger" role="alert">
            <h5 class="alert-heading">Are you sure you want to delete this user?</h5>
            <p>This action cannot be undone. All data associated with this user will be permanently removed.</p>
        </div>

        <div>
            <dl class="row">
                <dt class="col-sm-3">User ID</dt>
                <dd class="col-sm-9">@Model.UserId</dd>

                <dt class="col-sm-3">Full Name</dt>
                <dd class="col-sm-9">@Model.FullName</dd>

                <dt class="col-sm-3">Email</dt>
                <dd class="col-sm-9">@Model.Email</dd>
            </dl>
            <hr />
            <form asp-action="DeleteUser" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" name="userId" value="@Model.UserId" />
                <button type="submit" class="btn btn-danger">Delete</button>
                <a asp-action="AllUsersList" class="btn btn-secondary">Cancel</a>
            </form>
        </div>
    </div>
</div>