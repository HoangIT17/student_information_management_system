@model IEnumerable<WebStudentMVC.ViewModels.UserViewModel>

@{
    ViewData["Title"] = "User Management";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid pt-4 px-4">
    <div class="bg-light rounded h-100 p-4 shadow-sm">
        <h4 class="mb-4">@ViewData["Title"]</h4>

        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
        }
        
        <div class="row mb-3">
            <div class="col-md-6">
                <form asp-action="AllUsersList" method="get">
                    <div class="input-group">
                        <input type="text" name="searchQuery" class="form-control" placeholder="Search..." value="@ViewData["CurrentFilter"]?.ToString()" />
                        <button class="btn btn-primary" type="submit"><i class="fas fa-search"></i></button>
                    </div>
                </form>
            </div>
            <div class="col-md-6 text-end">
                <a asp-action="CreateUser" class="btn btn-success"><i class="fas fa-plus"></i> Create New User</a>
            </div>
        </div>
        
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Full Name</th>
                    <th>Email</th>
                    <th>Role</th>
                    <th>Status</th>
                    <th class="text-end">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>@user.FullName</td>
                        <td>@user.Email</td>
                        <td>@user.Role</td>
                        <td>
                            @if (user.Role == "Teacher")
                            {
                                @(user.IsApproved ? "Approved" : "Pending")
                            }
                            else { <text>N/A</text> }
                        </td>
                        <td class="text-end">
                            <a asp-action="UserDetails" asp-route-userId="@user.UserId" class="btn btn-sm btn-info" title="Details"><i class="fas fa-eye"></i></a>
                            <a asp-action="EditUser" asp-route-userId="@user.UserId" class="btn btn-sm btn-warning" title="Edit"><i class="fas fa-edit"></i></a>
                            <a asp-action="DeleteUser" asp-route-userId="@user.UserId" class="btn btn-sm btn-danger" title="Delete"><i class="fas fa-trash"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>