@model IEnumerable<WebStudentMVC.ViewModels.UserViewModel>

@{
    ViewData["Title"] = "All Users";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";

}

<h1>User Management</h1>

<p>
    <a asp-action="CreateUser" class="btn btn-primary">Create New User</a>
</p>

<!-- Search Form -->
<form asp-action="AllUsersList" method="get" class="mb-3">
    <div class="input-group">
        <input type="text" name="searchTerm" class="form-control" placeholder="Search by Full Name..." value="@ViewData["CurrentFilter"]">
        <button type="submit" class="btn btn-info">Search</button>
    </div>
</form>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger" role="alert">
        @TempData["ErrorMessage"]
    </div>
}

<table class="table">
    <thead>
        <tr>
            <th>Full Name</th>
            <th>Email</th>
            <th>Role</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.FullName</td>
                <td>@user.Email</td>
                <td>@user.Role</td>
                <td>
                    @if(user.Role == "Teacher")
                    {
                        @(user.IsApproved ? "Approved" : "Pending")
                    }
                </td>
                <td>
                    <a asp-action="UserDetails" asp-route-userId="@user.UserId" class="btn btn-info btn-sm">Details</a>
                    <a asp-action="EditUser" asp-route-userId="@user.UserId" class="btn btn-warning btn-sm">Edit Role</a>
                    <form asp-action="DeleteUser" asp-route-userId="@user.UserId" method="post" style="display:inline;" onsubmit="return confirm('Are you sure you want to delete this user?');">
                         <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>