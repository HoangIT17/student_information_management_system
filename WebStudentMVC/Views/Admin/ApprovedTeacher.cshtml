@model IEnumerable<WebStudentMVC.ViewModels.UserViewModel>

@{
    ViewData["Title"] = "Teacher Approval";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid pt-4 px-4">
    <div class="bg-light rounded h-100 p-4 shadow-sm">
        <h4 class="mb-4">@ViewData["Title"]</h4>
        
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
        }

        @if (!Model.Any())
        {
            <div class="alert alert-success" role="alert">
                <i class="fas fa-check-circle me-2"></i>There are no new teacher registrations to approve.
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th scope="col">Full Name</th>
                            <th scope="col">Email</th>
                            <th scope="col" class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var teacher in Model)
                        {
                            <tr>
                                <td>@teacher.FullName</td>
                                <td>@teacher.Email</td>
                                <td class="text-center">
                                    <form asp-action="Approve" method="post" class="d-inline">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="userId" value="@teacher.UserId" />
                                        <button type="submit" class="btn btn-sm btn-success">
                                            <i class="fas fa-check me-1"></i>Approve
                                        </button>
                                    </form>
                                    <form asp-action="Reject" method="post" class="d-inline" onsubmit="return confirm('Are you sure you want to reject and delete this registration?');">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="userId" value="@teacher.UserId" />
                                        <button type="submit" class="btn btn-sm btn-danger">
                                            <i class="fas fa-times me-1"></i>Reject
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>