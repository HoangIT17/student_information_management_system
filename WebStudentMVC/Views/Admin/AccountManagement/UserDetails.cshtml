@model WebStudentMVC.ViewModels.UserViewModel

@{
    ViewData["Title"] = "User Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>User Details</h1>

<div>
    <h4>@Model.FullName</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">User ID</dt>
        <dd class = "col-sm-10">@Model.UserId</dd>
        
        <dt class = "col-sm-2">Full Name</dt>
        <dd class = "col-sm-10">@Model.FullName</dd>
        
        <dt class = "col-sm-2">Email</dt>
        <dd class = "col-sm-10">@Model.Email</dd>
        
        <dt class = "col-sm-2">Role</dt>
        <dd class = "col-sm-10">@Model.Role</dd>
        
        <dt class = "col-sm-2">Status</dt>
        <dd class = "col-sm-10">
            @if(Model.Role == "Teacher")
            {
                @(Model.IsApproved ? "Approved" : "Pending")
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-action="EditUser" asp-route-userId="@Model.UserId">Edit Role</a> |
    <a asp-action="AllUsersList">Back to List</a>
</div>